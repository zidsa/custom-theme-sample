				{# script modes of the categoryes #}
				<script>
				// Cache DOM elements
				const modeOne = document.querySelector('.mode-one');
				const modeThree = document.querySelector('.mode-three');
				const contentProducts = document.querySelector('.products-list');
				const infoCards = document.querySelectorAll(".content-info-card");
				const items = document.querySelectorAll(".product-item");
				const cards = document.querySelectorAll(".content-card");
				const wishlists = document.querySelectorAll(".add-to-wishlist");
				// Function to reset styles
				const resetStyles = (elements) => { 
					elements.forEach(element => element.style.cssText = '');
				};
				// Function to apply Mode One styles
				const applyModeOneStyles = () => {
					contentProducts.style.gridTemplateColumns = 'repeat(4, 1fr)';
					resetStyles(infoCards);
					resetStyles(items);
					resetStyles(cards);
				};
				// Function to apply Mode Three styles
				const applyModeThreeStyles = () => {
					contentProducts.style.gridTemplateColumns = 'repeat(1, 1fr)';
					infoCards.forEach(info => info.style.cssText = 'flex-direction: column !important; width: 40%; display: flex;');
					items.forEach(item => item.style.cssText = 'display: flex; flex-direction: row !important; gap: 45px;');
					cards.forEach(card => card.style.cssText = 'width: 35%;');
				};
				// Function to handle mobile layout
				const handleMobileLayout = () => {
					if (window.innerWidth <= 500) {
						document.querySelector('.products-filter').style.cssText = 'flex-wrap: wrap; margin: 15px; justify-content: flex-end !important;';

						modeOne.onclick = () => {
						contentProducts.style.gridTemplateColumns = 'repeat(2, 1fr)';
						resetStyles(infoCards);
						resetStyles(items);
						resetStyles(cards);
						resetStyles(wishlists);
						};

						modeThree.onclick = () => {
						infoCards.forEach(info => info.style.cssText = 'flex-direction: column !important; width: 100%; display: flex;');
						items.forEach(item => item.style.cssText = 'display: flex; flex-direction: row !important; gap: 20px; align-items: center;');
						cards.forEach(card => card.style.cssText = 'width: 80%;');
						wishlists.forEach(wish => wish.style.cssText = 'position: absolute; top: 0; left: 0;');
						};
					}
				};
				// Event Listeners
				document.addEventListener('DOMContentLoaded', () => {
					if (modeOne) modeOne.addEventListener('click', applyModeOneStyles);
					if (modeThree) modeThree.addEventListener('click', applyModeThreeStyles);
				});
				window.addEventListener('load', handleMobileLayout);
				</script>
				{# End the script #}
				 <script>
					window.appDirection = '{% if session.lang.code == 'ar' %}rtl{% else %}ltr{% endif %}';
				
					window.loadToasterScriptIfNotLoaded = function (onCompleted) {
						var list = document.getElementsByTagName('script');
						var i = list.length, flag = false;
						while (i--) {
							if (list[i].src === "{{ asset_url ~ 'toastr.min.js' }}") {
								flag = true;
								break;
							}
						}
				
						if (!flag) {
							var script = document.createElement('script');
							script.src = "{{ asset_url ~ 'toastr.min.js' }}";
							document.getElementsByTagName('head')[0].appendChild(script);
				
							var fileref = document.createElement("link");
							fileref.rel = "stylesheet";
							fileref.type = "text/css";
							fileref.href = "{{ asset_url ~ 'toastr.min.css' }}";
							document.getElementsByTagName("head")[0].appendChild(fileref)
				
							script.onload = function () {
								if(onCompleted)
									onCompleted();
							}
						}else{
							if(onCompleted)
								onCompleted();
						}
					}
				</script>

